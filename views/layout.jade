html(lang=en)
    head
        title WeeMS
        meta(name='charset',content='utf-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name='viewport',content='width=device-width, initial-scale=1')
        meta(name='description',content='')
        meta(name='author',content='')

        link(rel='stylesheet', href='vendor/bootstrap/css/bootstrap.css')
        link(rel='stylesheet', href='css/style.css')
        link(rel='stylesheet', href='vendor/slidepushmenus/css/component.css')

        script(src="vendor/slidepushmenus/js/modernizr.custom.js",type="application/javascript")
        script(src="vendor/jquery-1.11.0.min.js",type="application/javascript")
        script(src="vendor/angular.min.js",type="application/javascript")
        script(src="vendor/angular-route.min.js",type="application/javascript")

        script(src="public/out.js",type="application/javascript")

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
