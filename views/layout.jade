    body(ng-app="MyApp",class="cbp-spmenu-push", ng-controller="MainController")
        nav#cbp-spmenu-s1.cbp-spmenu.cbp-spmenu-vertical.cbp-spmenu-left
            h3 Menu
            a(href='#') Dashboard
            a(href='#') Items
            a(href='#') Customers
            a(href='#') Users
        .container
            header.clearfix
                span WeeMS
                section.buttonset
                    button#showLeftPush Show/Hide Menu
                testme
            .main
                h3 {{GeoLocationResult.country_name}} - {{GeoLocationResult.city}}
                p(style='white-space:pre;')
                   | IP : {{GeoLocationResult.ip}}
                   | City : {{GeoLocationResult.city}}
                   | Country : {{GeoLocationResult.country_name}} ({{GeoLocationResult.country_code}})
                   | Region : {{GeoLocationResult.region_name}}
                img(src='http://maps.googleapis.com/maps/api/staticmap?zoom=13&size=600x600&maptype=terrain&markers=color:red%7C{{GeoLocationResult.latitude}}%2C{{GeoLocationResult.longitude}}')
        script(src='vendor/bootstrap/js/bootstrap.min.js')
        script(src='vendor/slidepushmenus/js/classie.js')
        script(type="text/javascript").
            var menuLeft = document.getElementById( 'cbp-spmenu-s1' ),
            body = document.body;
            showLeftPush.onclick = function() {
                classie.toggle( this, 'active' )
                classie.toggle( body, 'cbp-spmenu-push-toright' )
                classie.toggle( menuLeft, 'cbp-spmenu-open' )
            };